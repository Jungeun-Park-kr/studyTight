                    $('#menu_timetable').addClass('menu_active');
                    $('#menu_home').removeClass('menu_active');
                    $('#menu_guestbook').removeClass('menu_active');
                } else {
                    $('#menu_home').removeClass('menu_active');
                    $('#menu_guestbook').removeClass('menu_active');
                    $('#menu_timetable').removeClass('menu_active');
                }


            });
